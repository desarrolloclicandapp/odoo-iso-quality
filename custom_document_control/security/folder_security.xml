<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="rule_document_folder_access" model="ir.rule">
        <field name="name">Acceso a Carpetas (Por Grupos)</field>
        <field name="model_id" ref="model_document_folder"/>
        <field name="domain_force">['|', ('allowed_group_ids', '=', False), ('access_user_ids', 'in', [user.id])]</field>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>
</odoo>
