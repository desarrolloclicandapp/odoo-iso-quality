<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_document_area_tree" model="ir.ui.view">
        <field name="name">document.area.list</field>
        <field name="model">document.area</field>
        <field name="arch" type="xml">
            <list editable="bottom"><field name="name"/><field name="code"/></list>
        </field>
    </record>
    <record id="action_document_area" model="ir.actions.act_window">
        <field name="name">√Åreas</field>
        <field name="res_model">document.area</field>
        <field name="view_mode">list</field>
    </record>

    <record id="view_document_category_tree" model="ir.ui.view">
        <field name="name">document.category.list</field>
        <field name="model">document.category</field>
        <field name="arch" type="xml">
            <list editable="bottom"><field name="name"/><field name="code"/></list>
        </field>
    </record>
    <record id="action_document_cat" model="ir.actions.act_window">
        <field name="name">Categor√≠as</field>
        <field name="res_model">document.category</field>
        <field name="view_mode">list</field>
    </record>

    <record id="view_document_type_tree" model="ir.ui.view">
        <field name="name">document.type.list</field>
        <field name="model">document.type</field>
        <field name="arch" type="xml">
            <list editable="bottom"><field name="name"/><field name="code"/></list>
        </field>
    </record>
    <record id="action_document_type" model="ir.actions.act_window">
        <field name="name">Tipos de Documento</field>
        <field name="res_model">document.type</field>
        <field name="view_mode">list</field>
    </record>

    <record id="view_document_tag_tree" model="ir.ui.view">
        <field name="name">document.tag.list</field>
        <field name="model">document.tag</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field name="name"/>
                <field name="color" widget="color_picker"/>
            </list>
        </field>
    </record>
    <record id="action_document_tag" model="ir.actions.act_window">
        <field name="name">Etiquetas de Documentos</field>
        <field name="res_model">document.tag</field>
        <field name="view_mode">list</field>
    </record>

<record id="view_document_folder_form" model="ir.ui.view">
        <field name="name">document.folder.form</field>
        <field name="model">document.folder</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name"/></h1>
                    </div>
                    <group>
                        <field name="parent_id"/>
                    </group>
                    <notebook>
                        <page string="Subcarpetas">
                            <field name="child_ids"><list><field name="name"/></list></field>
                        </page>
                        <page string="Permisos de Usuarios">
                            <div class="alert alert-info" role="alert">
                                <i class="fa fa-info-circle"/> 
                                <strong>C√≥mo funciona:</strong>
                                <ul>
                                    <li>Si la lista est√° <strong>vac√≠a</strong>: La carpeta es P√öBLICA (Todos acceden).</li>
                                    <li>Si agregas <strong>usuarios</strong>: Solo ellos (y t√∫) podr√°n verla.</li>
                                </ul>
                            </div>
                            <field name="access_ids">
                                <list editable="bottom">
                                    <field name="user_id"/>
                                    <field name="access_level"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_document_folder_tree" model="ir.ui.view">
        <field name="name">document.folder.list</field>
        <field name="model">document.folder</field>
        <field name="arch" type="xml">
            <list><field name="complete_name" string="Ruta"/></list>
        </field>
    </record>
    <record id="action_document_folder" model="ir.actions.act_window">
        <field name="name">Estructura de Carpetas</field>
        <field name="res_model">document.folder</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="view_document_preview_popup" model="ir.ui.view">
        <field name="name">document.control.preview.popup</field>
        <field name="model">document.control</field>
        <field name="arch" type="xml">
            <form string="Vista R√°pida">
                <div class="o_form_view_container" style="padding:0; margin:0;">
                    <field name="preview_html" widget="html" options="{'style-inline': true}" nolabel="1"/>
                </div>
<footer></footer>
            </form>
        </field>
    </record>

    <record id="view_document_control_tree" model="ir.ui.view">
        <field name="name">document.control.list</field>
        <field name="model">document.control</field>
        <field name="arch" type="xml">
            <list decoration-muted="state == 'obsolete'">
                <field name="code"/>
                <field name="name"/>
                <field name="area_id"/>
                <field name="type_id"/>
                <field name="version"/>
                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                <field name="folder_id" optional="hide"/>
                <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-primary="state == 'upload'" decoration-warning="state in ('review','validate')" decoration-success="state == 'approved'"/>
            </list>
        </field>
    </record>

    <record id="view_document_control_form" model="ir.ui.view">
        <field name="name">document.control.form</field>
        <field name="model">document.control</field>
        <field name="arch" type="xml">
            <form string="Documento">
                <header>
                    <button name="action_start_flow" string="Iniciar flujo" type="object" class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_submit_review" string="Enviar a revisi√≥n" type="object" class="oe_highlight" invisible="state != 'upload'"/>
                    <button name="action_review_pass" string="Visto bueno" type="object" class="oe_highlight" invisible="state != 'review'"/>
                    <button name="action_approve" string="Aprobar definitivo" type="object" class="oe_highlight" invisible="state != 'validate'"/>
                    <button name="action_publish_direct" string="Publicar directo" type="object" class="btn-success" invisible="state != 'upload' or document_scope == 'internal'"/>
                    <button name="action_reject" string="‚ùå Rechazar" type="object" class="btn-danger" invisible="state not in ('review', 'validate')"/>
                    
                    <button name="action_create_minor_rev" string="Vers. Menor" type="object" class="btn-secondary" invisible="state != 'approved' or active_revision_id" confirm="¬øCrear borrador v+0.1?"/>
                    <button name="action_create_major_rev" string="Vers. Mayor" type="object" class="btn-primary" invisible="state != 'approved' or active_revision_id" confirm="¬øCrear nueva versi√≥n mayor?"/>
                    
                    <button name="action_open_preview_popup" string="üëÅÔ∏è Ver Documento" type="object" class="btn-info"/>
                    <button name="action_view_certificate" string="üñ®Ô∏è Certificado" type="object" class="btn-secondary" invisible="state != 'approved'"/>
                    
                    <field name="state" widget="statusbar" statusbar_visible="draft,upload,approved"/>
                </header>

                <div class="alert alert-warning" role="alert" invisible="not active_revision_id">
                    <strong>¬°Atenci√≥n!</strong> Ya existe una nueva versi√≥n en curso para este documento: 
                    <field name="active_revision_id" widget="url" readonly="1" string="Ir al Borrador"/>
                </div>

                <sheet>
                    <div class="oe_title">
                        <h1><field name="code"/> <span class="o_tag o_tag_color_10">v<field name="version"/></span></h1>
                        <h2><field name="name" placeholder="T√≠tulo del Documento..." readonly="state != 'draft'"/></h2>
                        <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color', 'no_create': True, 'no_edit': True}" placeholder="Etiquetas..."/>
                    </div>

                    <group>
                        <group string="Clasificaci√≥n">
                            <field name="area_id" options="{'no_create': False}" readonly="state != 'draft'"/>
                            <field name="category_id" options="{'no_create': False}" readonly="state != 'draft'"/>
                            <field name="type_id" options="{'no_create': False}" readonly="state != 'draft'"/>
                            <field name="folder_id" options="{'no_create': True}" readonly="state != 'draft'"/>
                            <field name="document_scope" widget="radio" options="{'horizontal': true}" readonly="state != 'draft'"/>
                        </group>
                        <group string="Detalles">
                            <field name="owner_id" readonly="state != 'draft'"/>
                            <field name="issue_date" readonly="1"/>
                            <field name="change_reason" invisible="version == '1.0'" readonly="state != 'upload'"/>
                            <field name="source_document_id" invisible="not source_document_id"/>
                            <field name="is_owner" invisible="1"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Descripci√≥n">
                            <div class="mb-2">
                                <button name="action_generate_ai_help" string="Generar Descripci√≥n con IA" type="object" class="btn-primary btn-sm"/>
                            </div>
                            <field name="description" placeholder="Describe el prop√≥sito del documento..."/>
                        </page>
                        <page string="Archivos">
                            <group>
                                <group string="Formato Editable">
                                    <field name="editable_filename" invisible="1"/>
                                    <field name="editable_file" filename="editable_filename" widget="binary"/>
                                </group>
                                <group string="Formato Final (PDF/Video)">
                                    <field name="pdf_filename" invisible="1"/>
                                    <field name="pdf_file" filename="pdf_filename" widget="binary"/>
                                </group>
                            </group>
                        </page>
                        <page string="Firmas y Aprobaciones" invisible="document_scope == 'external'">
                            <group>
                                <field name="reviewer_ids" widget="many2many_tags" readonly="state != 'upload'"/>
                                <field name="approver_ids" widget="many2many_tags" readonly="state != 'upload'"/>
                            </group>
                            <group string="Auditor√≠a" invisible="state != 'approved'">
                                <field name="reviewed_by_id"/>
                                <field name="review_date"/>
                                <field name="approved_by_id"/>
                                <field name="approval_date"/>
                            </group>
                        </page>
                        <page string="Historial de Versiones" name="history_versions">
                            <field name="history_ids" readonly="1">
                                <list decoration-muted="state == 'obsolete'" decoration-info="state == 'approved'">
                                    <field name="version" string="Versi√≥n"/>
                                    <field name="issue_date" string="Fecha Emisi√≥n"/>
                                    <field name="change_reason" string="Motivo Cambio"/>
                                    <field name="approved_by_id" widget="many2one_avatar_user" string="Aprobado por"/>
                                    <field name="state" widget="badge" 
                                        decoration-danger="state == 'obsolete'" 
                                        decoration-success="state == 'approved'"
                                        decoration-warning="state == 'validate'"/>
                                    <button name="action_open_from_list" type="object" icon="fa-external-link" title="Ir al Documento" class="btn-secondary"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter" groups="base.group_no_one">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_document_control_kanban" model="ir.ui.view">
        <field name="name">document.control.kanban</field>
        <field name="model">document.control</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" quick_create="false" records_draggable="false" sample="1">
                <field name="state"/><field name="code"/><field name="name"/><field name="version"/><field name="owner_id"/><field name="activity_ids"/><field name="area_id"/>
                <templates>
                    <t t-name="card">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <strong class="o_kanban_record_title fw-bold fs-5">
                                <span t-if="record.code.value != 'Borrador'" class="text-primary me-2">[<field name="code"/>]</span>
                                <field name="name"/>
                            </strong>
                        </div>
                        <div class="text-muted">v<field name="version"/> - <field name="area_id"/></div>
                        <div class="d-flex justify-content-between align-items-center mt-3 pt-2 border-top">
                            <field name="activity_ids" widget="kanban_activity"/>
                            <field name="owner_id" widget="many2one_avatar_user"/>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_document_control_search" model="ir.ui.view">
        <field name="name">document.control.search</field>
        <field name="model">document.control</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/><field name="code"/><field name="tag_ids"/>
                <filter string="Mis Documentos" name="my_docs" domain="[('owner_id', '=', uid)]"/>
                <filter string="Vigentes" name="active_docs" domain="[('state', '=', 'approved')]"/>
                <searchpanel>
                    <field name="folder_id" icon="fa-folder" enable_counters="0" hierarchy="1"/>
                    <field name="state" icon="fa-filter" select="multi" enable_counters="1"/>
                </searchpanel>
            </search>
        </field>
    </record>

    <record id="action_document_control" model="ir.actions.act_window">
        <field name="name">Carga de archivos</field>
        <field name="res_model">document.control</field>
        <field name="view_mode">list,form</field>
<field name="domain">[('state', '!=', 'obsolete')]</field>
    </record>

    <record id="action_my_pending_tasks" model="ir.actions.act_window">
        <field name="name">Escritorio de Trabajo</field>
        <field name="res_model">document.control</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="domain">['|', '|', '&amp;', ('state', 'in', ['draft', 'upload']), ('owner_id', '=', uid), '&amp;', ('state', '=', 'review'), ('reviewer_ids', 'in', [uid]), '&amp;', ('state', '=', 'validate'), ('approver_ids', 'in', [uid])]</field>
        <field name="context">{'search_default_group_by_state': 1}</field>
    </record>

    <record id="view_document_repository_list" model="ir.ui.view">
        <field name="name">document.repository.list</field>
        <field name="model">document.control</field>
        <field name="arch" type="xml">
            <list create="0" delete="0" edit="0" decoration-muted="state == 'obsolete'">
                <field name="code" optional="show"/><field name="name"/><field name="version"/><field name="issue_date"/>
                <field name="pdf_filename" column_invisible="True"/><field name="editable_filename" column_invisible="True"/>
                
                <button name="action_open_preview_popup" type="object" string=" Ver" icon="fa-eye" class="btn-info" invisible="not pdf_filename and not editable_filename"/>
                <field name="pdf_file" filename="pdf_filename" widget="binary" string=" " nolabel="1"/>
                <button name="action_view_certificate" type="object" string="Certificado" icon="fa-certificate" class="btn-secondary"/>
                <field name="folder_id" optional="hide"/>
                <field name="state" widget="badge" decoration-success="state == 'approved'"/>
            </list>
        </field>
    </record>

    <record id="action_document_repository" model="ir.actions.act_window">
        <field name="name">Repositorio</field>
        <field name="res_model">document.control</field>
        <field name="view_mode">list,kanban,form</field> 
        <field name="domain">[('state', '=', 'approved')]</field>
        <field name="view_id" ref="view_document_repository_list"/>
    </record>

</odoo>
