<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_report_document_certificate" model="ir.actions.report">
        <field name="name">Certificado de Aprobación</field>
        <field name="model">document.control</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">custom_document_control.report_document_certificate_template</field>
        <field name="report_file">custom_document_control.report_document_certificate_template</field>
        <field name="binding_model_id" ref="model_document_control"/>
        <field name="binding_type">report</field>
    </record>

    <template id="report_document_certificate_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        
                        <div class="text-center mb-4">
                            <h2>Certificado de Control Documental</h2>
                            <h4 class="text-muted"><span t-field="o.code"/> - v<span t-field="o.version"/></h4>
                        </div>

                        <hr/>

                        <div class="row mt-4">
                            <div class="col-6">
                                <strong>Título del Documento:</strong><br/>
                                <span t-field="o.name"/>
                            </div>
                            <div class="col-6">
                                <strong>Área Responsable:</strong><br/>
                                <span t-field="o.area_id.name"/> (<span t-field="o.area_id.code"/>)
                            </div>
                        </div>

                        <div class="row mt-3">
                            <div class="col-6">
                                <strong>Tipo de Documento:</strong><br/>
                                <span t-field="o.type_id.name"/>
                            </div>
                            <div class="col-6">
                                <strong>Fecha de Emisión:</strong><br/>
                                <span t-field="o.issue_date"/>
                            </div>
                        </div>

                        <div class="row mt-4" t-if="o.description">
                            <div class="col-12">
                                <strong>Descripción / Alcance:</strong>
                                <p t-field="o.description" class="text-justify border p-2 bg-light"/>
                            </div>
                        </div>

                        <h3 class="mt-5 mb-3">Firmas de Autorización</h3>
                        <table class="table table-bordered">
                            <thead>
                                <tr class="bg-light">
                                    <th>Rol</th>
                                    <th>Usuario</th>
                                    <th>Fecha</th>
                                    <th>Firma Digital</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td><strong>Propietario / Autor</strong></td>
                                    <td><span t-field="o.owner_id.name"/></td>
                                    <td><span t-field="o.create_date" t-options='{"widget": "date"}'/></td>
                                    <td><span class="badge rounded-pill text-bg-secondary">Creado</span></td>
                                </tr>
                                <tr t-if="o.reviewed_by_id">
                                    <td><strong>Revisor Técnico</strong></td>
                                    <td><span t-field="o.reviewed_by_id.name"/></td>
                                    <td><span t-field="o.review_date"/></td>
                                    <td><span class="badge rounded-pill text-bg-info">Validado</span></td>
                                </tr>
                                <tr t-if="o.approved_by_id">
                                    <td><strong>Aprobación Final</strong></td>
                                    <td><span t-field="o.approved_by_id.name"/></td>
                                    <td><span t-field="o.approval_date"/></td>
                                    <td><span class="badge rounded-pill text-bg-success">Aprobado</span></td>
                                </tr>
                            </tbody>
                        </table>

                        <div style="page-break-inside: avoid;">
                            <h3 class="mt-5 mb-3">Historial de Cambios y Versiones</h3>
                            <table class="table table-sm table-striped" style="font-size: 11px;">
                                <thead>
                                    <tr>
                                        <th style="width: 15%;">Fecha</th>
                                        <th style="width: 10%;">Versión</th>
                                        <th style="width: 20%;">Usuario</th>
                                        <th style="width: 55%;">Detalle / Motivo</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr t-foreach="o.get_full_audit_trail()" t-as="log">
                                        <td><span t-esc="log['date']" t-options='{"widget": "datetime"}'/></td>
                                        <td class="text-center"><span t-esc="log['version']"/></td>
                                        <td><span t-esc="log['user']"/></td>
                                        <td>
                                            <span t-if="log['type'] == 'reject'" style="color: red; font-weight: bold;">
                                                <t t-esc="log['action']"/>
                                            </span>
                                            <span t-else="">
                                                <t t-esc="log['action']"/>
                                            </span>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>

                        <div class="text-center text-muted mt-5" style="font-size: 10px;">
                            Este documento ha sido generado electrónicamente por el sistema de gestión de calidad.
                            Cualquier copia impresa se considera "Copia No Controlada".
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
